{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "timber/timber": "*",
    "wpackagist-plugin/aryo-activity-log": "*",
    "wpackagist-plugin/core-sitemaps": "*",
    "wpackagist-plugin/defender-security": "*",
    "wpackagist-plugin/duplicate-post": "*",
    "wpackagist-plugin/google-authenticator": "*",
    "wpackagist-plugin/limit-login-attempts-reloaded": "*",
    "wpackagist-plugin/loggedin": "*",
    "wpackagist-plugin/wp-autoupdates": "*",
    "wpackagist-plugin/wp-security-questions": "*",
    "wpackagist-plugin/wps-hide-login": "*"
  },
  "require-dev": {
    "filp/whoops": "*",
    "squizlabs/php_codesniffer": "*",
    "umutphp/wp-vulnerability-check": "*",
    "whoops/soap": "*",
    "wpackagist-plugin/query-monitor": "*",
    "wpackagist-plugin/redis-cache": "*",
    "wpackagist-plugin/wp-auto-login": "*",
    "wpackagist-plugin/wp-crontrol": "*"
  },
  "scripts": {
    "development": [
      "composer dump-autoload"
    ],
    "production": [
      "composer dump-autoload --no-dev --optimize"
    ],
    "predeploy": [
      "@development",
      "@lint",
      "@wpscan",
      "@production"
    ],
    "lint": [
      "vendor/bin/phpcs --standard=phpcs.xml"
    ],
    "fix": [
      "vendor/bin/phpcbf --standard=phpcs.xml"
    ],
    "wpscan": [
      "vendor/bin/wp-vulnerability-check --config wpscan.yml"
    ],
    "version": [
      "composer update nothing",
      "@production"
    ],
    "deps": [
      "composer show --tree"
    ]
  }
}
